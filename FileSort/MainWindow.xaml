<Window x:Class="FileSort.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileSort"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">
    <StackPanel>
        <!-- Headline -->
        <TextBox Text="FileSort" FontSize="16" IsReadOnly="True" TextAlignment="Center" BorderThickness="0"></TextBox>
        
        <!-- Content text -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>    
        
            <TextBox Grid.Column="1" Text="text text text text" FontSize="11" IsReadOnly="True" BorderThickness="0"></TextBox>
        </Grid>
        
        <!-- Error Messagees box -->
        
    </StackPanel>
</Window>
